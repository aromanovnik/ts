{
  "root": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json", "tsconfig.dev.json"],
        "createDefaultProgram": true
      },
      "extends": [
        // Airbnb
        "airbnb-typescript/base",
        // Prettier
        "prettier", // /@typescript-eslint
        "plugin:prettier/recommended"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
